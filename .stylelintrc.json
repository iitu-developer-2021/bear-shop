{ "extends": ["stylelint-config-recommended-scss"],
  "rules": {
      "scss/at-extend-no-missing-placeholder": true,
      "selector-class-pattern": null,
      "selector-id-pattern": null,
      "declaration-empty-line-before": "never",
      "rule-empty-line-before": [
        "always",
        {
          "except": [
            "first-nested"
          ],
          "ignore": [
            "after-comment"
          ]
        }
      ]
  }
}
